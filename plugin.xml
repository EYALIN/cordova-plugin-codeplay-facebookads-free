<?xml version='1.1' encoding='utf-8'?>
<plugin id="cordova-plugin-codeplay-facebookads-free" version="0.0.1"
	xmlns="http://apache.org/cordova/ns/plugins/1.0"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<name>codeplayfacebookads</name>
	<js-module name="codeplayfacebookads" src="www/codeplayfacebookads.js">
		<clobbers target="cordova.plugins.codeplayfacebookads" />
	</js-module>
	<platform name="android">
		<config-file parent="/*" target="res/xml/config.xml">
			<feature name="codeplayfacebookads">
				<param name="android-package" value="cordova.plugin.codeplay.facebookads.free.codeplayfacebookads" />
			</feature>
		</config-file>
		<config-file parent="/*" target="AndroidManifest.xml"></config-file>
		<source-file src="src/android/codeplayfacebookads.java" target-dir="src/cordova/plugin/codeplay/facebookads/free/codeplayfacebookads" />
		<framework custom="true" src="src/android/facebook-sdk.gradle" type="gradleReference" />
		<framework src="com.google.ads.mediation:facebook:6.14.0.0" />


		<!--<framework src="com.google.ads.mediation:vungle:6.12.1.1" />
		<framework src="com.google.ads.mediation:mintegral:16.4.41.0" />
		<framework src="com.google.ads.mediation:pangle:5.2.0.3.0" />-->
	</platform>
	<platform name="ios">
		<!-- <pods-config ios-min-version="9.0" use-frameworks="true" />-->
		<!-- I don't know if cocoapods support `.+` so I used the latest exact version -->
		<config-file target="*-Info.plist" parent="SKAdNetworkItems">
			<array>
				<dict>
					<key>SKAdNetworkIdentifier</key>
					<string>v9wttpbfk9.skadnetwork</string>
				</dict>
				<dict>
					<key>SKAdNetworkIdentifier</key>
					<string>n38lu8286q.skadnetwork</string>
				</dict>
			</array>
		</config-file>
		<podspec>
			<config>
				<source url="https://cdn.cocoapods.org/" />
			</config>
			<pods use-frameworks="true">
				<pod name="GoogleMobileAdsMediationFacebook" spec="~> 6.12.0" />
				<pod name="GoogleMobileAdsMediationVungle" spec="~> 7.0.0.0" />
				<pod name="GoogleMobileAdsMediationMintegral" spec="~> 7.3.4.0" />
				<pod name="GoogleMobileAdsMediationPangle" spec="~> 5.2.0.6.0" />
			</pods>
		</podspec>
		<!-- Prevents compilation failures when using pod's id with additional mediations plugins -->
		<!--    <dependency id="cordova-plugin-cocoapod-support" />-->
	</platform>
</plugin>
